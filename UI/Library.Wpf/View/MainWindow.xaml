<Window
    x:Class="Library.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Path=Title}"
    Width="800"
    Height="450"
    DataContext="{Binding MainWindowViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Command="{Binding GetBooksWithoutAuthorCommand}"
            Content="Книги без указания автора" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Command="{Binding GetBooksWithFewGenresCommand}"
            Content="Книги с несколькими жанрами" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Command="{Binding GetPublichsersBooksCommand}"
            Content="Книги разных издательств" />
        <DataGrid Grid.ColumnSpan="3" Grid.Row="1" ItemsSource="{Binding Books}"/>
    </Grid>
</Window>
